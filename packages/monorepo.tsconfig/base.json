{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "isolatedDeclarations": true,

    "declarationMap": true,
    "declaration": true,

    "isolatedModules": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "resolveJsonModule": true,
    "stripInternal": true,
    "composite": true,
    "jsx": "react-jsxdev",

    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/build/esm"
  },
  "include": [
    "${configDir}/src/**/*"
  ]
}

{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmit": true,

    "declarationMap": true,
    "declaration": true,

    "isolatedModules": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "skipLibCheck": true,
    "resolveJsonModule": true,
    "stripInternal": true,
    "composite": true,
    "jsx": "react-jsxdev"
  }
}
